  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "chalk": "^2.1.0",
    "figures": "^3.0.0",
    "ganache-core": "2.5.3",
    "listr": "^0.14.3",
    "ncp": "^2.0.0",
    "rimraf": "^2.6.2",
    "web3": "1.0.0-beta.35",
    "yargs": "^12.0.0"
  },
  "devDependencies": {
    "@aragon/cli": "^5.0.0",
